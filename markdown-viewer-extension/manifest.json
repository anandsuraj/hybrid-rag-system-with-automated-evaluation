{
  "manifest_version": 3,
  "name": "Markdown Viewer",
  "version": "1.0",
  "description": "Automatically renders local and remote Markdown files as HTML.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "file:///*.md",
        "file:///*.markdown",
        "http://*/*.md",
        "https://*/*.md"
      ],
      "js": ["lib/marked.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting" 
  ],
  "host_permissions": [
    "file:///*",
    "http://*/*",
    "https://*/*"
  ]
}
